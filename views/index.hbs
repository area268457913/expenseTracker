<div class="container">
  <!-- Content here -->
  <div class="dropdown">
    <button class="mt-3 btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown"
      aria-haspopup="true" aria-expanded="false">
      Dropdown button
    </button>
    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
      <a class="dropdown-item" href="#">Action</a>
      <a class="dropdown-item" href="#">Another action</a>
      <a class="dropdown-item" href="#">Something else here</a>
    </div>

    <div class="row mt-5 ml-5 mr-5">
      <div class="col-md-4 ">
        <div class="h3 ">總金額</div>
      </div>
      <div class="col-md-4 ">
        <div class="h2 text-danger" id="amountShow">{{totalAmount}}</div>
      </div>
    </div>
  </div>

  {{#each records}}
  <div class="row mt-3">
    {{!-- 左 --}}
    <div class="col-sm">
      <div class="h3">
        <i class="{{this.icon}} fa-1x"></i>
        {{this.name}}
      </div>
      <div>{{this.date}}</div>
    </div>

    {{!-- 中 --}}
    <div class="col-sm">
      <div class="col-1 h3 text-danger" style="display: flex; align-items: center; justify-content: center;">
        {{this.amount}}</div>
    </div>
    {{!-- 右 --}}
    <div class="col-sm">
      <div>
        <a class="btn btn-success" href="./recs/{{ this._id }}/edit">修改</a>
        <form action="./recs/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
          <button class="btn btn-danger" type="submit">刪除</button>
        </form>
      </div>
    </div>
  </div>
  {{/each}}
</div>
<div class="my-1 text-center">
  <a class="add-btn btn btn-info mr-5" href="./recs/new" role="button">新增支出</a>
</div>
</div>